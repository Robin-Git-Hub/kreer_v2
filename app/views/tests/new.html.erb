<!-- Test recruiter form -->
<div class="container mx-auto">
<!-- 1st section -->
  <%= simple_form_for(@test) do |f| %>
    <section id="first-section" class="text-gray-700 body-font relative">
      <div class="bg-gray container px-10 py-20 mx-auto mb-1">
        <div class="flex flex-col text-center w-full mb-10">
          <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-900">Welcome to Kreer's test generator</h1>
        </div>

        <div class="flex flex-col text-center w-full mb-5">
          <p class="lg:w-2/3 mx-auto leading-relaxed text-base test-gray-700">In order to create a bespoke test that would fit your recruitment needs, we'll ask you to answer a few questions first...</div>

        <div class="lg:w-1/2 md:w-2/3 mx-auto">
          <div class="flex flex-wrap -m-2">
            <div class="p-2 w-full">
              <label class="text-gray-900 text-lg mb-1 font-medium title-font">Give your test a name </label>
              <div class= "w-full my-3 rounded border border-gray-400 focus:outline-none focus:border-indigo-500 text-base px-4 py-2" type="text">
                <%= f.input :name, label: false, placeholder: "Apple_PMA_test", class: "w-100" %>
              </div>
            </div>
            <div class="p-2 w-full">
              <label class="text-gray-900 text-lg mb-1 font-medium title-font">Please specify your job test audience</label>
              <div class="w-full my-3 rounded border border-gray-400 focus:outline-none focus:border-indigo-500 text-base px-4 py-2">
                <%= f.input :jobtype, label: false, collection: Test::JOBTYPES, prompt: "Associate Product Manager" %>
              </div>
            </div>
            <div class="p-2 w-full next-btn">
              <p id="first-btn" class="text-white bg-teal-500 border-0 py-2 px-20 my-5 focus:outline-none hover:bg-teal-500 rounded text-lg">Next</p>
            </div>
         </div>
        </div>
      </div>
    </section>
  <!-- 2nd section -->
    <section id="second-section" class="text-gray-700 body-font relative">
      <div class="container px-10 py-20 mx-auto">
        <!-- Section title -->
        <div class="flex flex-col text-center w-full mb-10">
          <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">You're almost done....</h1>
        </div>
          <!-- Question selection tags -->
          <div class="lg:w-1/2 md:w-2/3 mx-auto">
            <div class="flex flex-wrap -m-2">
              <label class="text-gray-900 text-lg mb-1 font-medium title-font">Select your question tags </label>
              <div class="category-choices w-full">
                <% Question::CATEGORIES.each do |category, value| %>
                  <input class="hidden" type="checkbox" name="test[tag_list][<%= category %>]" id="test_category_<%= category %>">
                  <div class="category-choice mb-2" data-for="test_category_<%= category %>">
                    <p><%= value %></p>
                    <i class="fa fa-check"></i>
                  </div>
                <% end %>
              </div>
            </div>
          <!-- submit button -->
            <div class="p-2 w-full">
              <%= f.submit "Submit", class: "flex mx-auto text-white bg-teal-500 border-0 py-2 px-20 my-8 focus:outline-none hover:bg-teal-500 rounded text-lg" %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>
