<section class="text-gray-700 body-font">

  <!--  display message if no campaign -->
  <% if current_user.tests_as_candidate == [] %>

      <section class="text-gray-700 body-font">
        <div class="container px-5 py-24 mx-auto">
          <div class="flex flex-col text-center w-full mb-20">
            <h2 class="sm:text-3xl text-2xl tracking-widest font-medium title-font text-indigo-500">Welcome to your <strong>K-reer </strong> dashboard!</h2>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base mt-10">In this section, you'll find all your test results'. Unfortunately, it seems that you have not been invitated yet to join a new recruitment campaign. Start applying to your favorite companies and recruiters will share with you a K-reer link to start testing your technical skills.</p>
            <p class="lg:w-2/3 mx-auto tracking-widest text-base mt-10">Good luck and see you soon!</p>
          </div>
        </div>
      </section>

  <% else %>
 <!--  display campaign results  -->
    <div class="container px-5 py-12 mx-auto text-center">
        <h1 class="sm:text-3xl text-2xl tracking-widest font-medium title-font text-gray-900 mb-20">Welcome to your <strong>K-reer </strong> dashboard!</h1>
      <!--  campaign.each do -->
      <div class="flex flex-wrap -m-4 mt-0">

      <% current_user.tests_as_candidate.each do| test|  %>
        <div class="p-4 md:w-1/3">
          <div class="h-full shadow-lg border-2 border-indigo-500 rounded-lg overflow-hidden">

            <div class="p-6 text-center">
              <span class="p-12 md:w-1/2 flex flex-col items-center py-1 px-3 rounded bg-indigo-100 text-indigo-500 text-center text-sm font-medium tracking-widest"><%= test.company_name %></span>
              <h1 class="inline-block mt-5 py-1 px-3 rounded text-black text-lg font-medium tracking-widest"><%= test.name %></h1>
              <h2 class="title-font text-sm font-medium text-gray-500 tracking-widest"><%= test.created_at.strftime('Created on %d/%m/%Y') %></h2>
              <button class="inline-flex justify-center text-white bg-indigo-500 border-0 py-2 px-2 mt-5 focus:outline-none hover:bg-indigo-500 rounded text-sm"><%= link_to "See results", test_candidate_result_path(test, current_user) %></button>
            </div>

          </div>
        </div>
      <% end %>
      </div>
    </div>
    <% end %>
</section>
