<section class="text-gray-700 body-font">

 <!--  display message if no campaign -->
  <% if @tests.count == 0 %>
      <section class="text-gray-700 body-font">
        <div class="container px-5 py-24 mx-auto">
          <div class="flex flex-col text-center w-full mb-20">
            <h1 class="sm:text-3xl text-2xl tracking-widest font-medium title-font text-indigo-500">Welcome to <strong>K-reer </strong>!</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base mt-10">In this section, you will find all your recruitment campaigns and candidate results'. Start creating a new campaign now to review only the best candidates!
          </div>
          <div class="lg:w-2/3 flex flex-col sm:flex-row sm:items-center items-start mx-auto">
            <button class="flex mx-auto tracking-widest text-white bg-teal-500 border-0 py-2 px-8 focus:outline-none hover:bg-teal-600 rounded text-lg sm:mt-0"><%= link_to "Start now", new_test_path %></button>
          </div>
        </div>
      </section>

 <!--  display campaign cards -->
  <% else %>
    <div class="container px-5 py-12 mx-auto text-center">
    <h1 class="sm:text-3xl text-2xl tracking-widest font-medium title-font text-gray-900 mb-4">My current recruitment campaigns</h1>
        <div class="p-6">
          <div class="flex justify-center">
            <button class="inline-flex items-center tracking-widest bg-teal-500 border-0 py-1 px-3 focus:outline-none hover:bg-teal-500 rounded text-white mt-4 md:mt-0"><%= link_to "Add new campaign", new_test_path %>
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>
      <div class="flex flex-wrap m-4 mt-0 justify-center">

      <% @tests.each do |test| %>
        <div class="p-4 md:w-1/3">
          <div class="h-full border-2 shadow-lg border-indigo-500 rounded-lg overflow-hidden">

            <div class="p-6">
              <span class="p-12 lg:w-1/2 flex flex-col items-center inline-block py-1 px-3 rounded bg-indigo-100 text-indigo-500 text-center text-sm font-medium tracking-widest"><%= test.company_name %></span>
              <h1 class="inline-block mt-5 py-1 px-3 rounded text-black text-lg font-medium tracking-widest"><%= test.name %></h1>
              <h2 class="title-font text-sm font-medium text-gray-500 tracking-widest"><%= test.created_at.strftime('Created on %d/%m/%Y') %></h2>
              <div class="flex justify-center mt-5">
                <button class="inline-flex text-indigo-500 bg-indigo-100 border-0 py-2 px-2 focus:outline-none hover:bg-indigo-100 rounded text-sm"><%= link_to "Questions", test_take_path(test) %></button>
                <button class="ml-4 inline-flex text-white bg-indigo-500 border-0 py-2 px-2 focus:outline-none hover:bg-indigo-600 rounded text-sm"><%= link_to "See results", test_path(test) %></button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
</section>
