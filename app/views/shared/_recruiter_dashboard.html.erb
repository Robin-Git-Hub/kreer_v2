<section class="text-gray-700 body-font">

 <!--  display message if no campaign -->
  <% if @tests.count == 0 %>
      <section class="text-gray-700 body-font">
        <div class="container px-5 py-24 mx-auto">
          <div class="flex flex-col text-center w-full mb-20">
            <h1 class="sm:text-3xl text-2xl tracking-widest font-medium title-font text-indigo-500">Welcome to <strong>K-reer </strong>!</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base mt-10">In this section, you will find all your recruitment campaigns and candidate results'. Start creating a new campaign now to review only the best candidates!
          </div>
          <div class="lg:w-2/3 flex flex-col sm:flex-row sm:items-center items-start mx-auto">
            <button class="flex mx-auto tracking-widest text-white bg-teal-500 border-0 py-2 px-8 focus:outline-none hover:bg-teal-600 rounded text-lg sm:mt-0"><%= link_to "Start now", new_test_path %></button>
          </div>
        </div>
      </section>

 <!--  display campaign cards -->
  <% else %>
    <div class="container px-5 py-12 mx-auto text-center">
    <h1 class="sm:text-3xl text-2xl tracking-widest font-medium title-font text-gray-900 mb-4">Your current recruitment campaigns</h1>
      <div class="flex flex-wrap m-4 mt-0 justify-center mt-5">
      <% @tests.each do |test| %>
        <div class="p-4 md:w-1/3">
          <div class="h-full border-2 shadow-lg border-indigo-500 rounded-lg overflow-hidden">
            <!-- <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2100&q=80/720x400" alt="blog"> -->
            <div class="p-6">
              <h1 class="sm:text-3xl text-2xl tracking-widest title-font font-medium text-gray-500 mb-1 text-center"><%= test.name %></h1>
              <h2 class="title-font text-lg font-medium text-gray-500 mb-3"><%= test.created_at.strftime('%d/%m/%Y') %></h2>
              <%= link_to "See results", test_path(test), class: "text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0" %>
              <div class="flex items-center flex-wrap ">
                <span class="text-gray-600 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-300">
                  <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>1.2K
                </span>
                <span class="text-gray-600 inline-flex items-center leading-none text-sm">
                  <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path>
                  </svg>6
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>
</section>
